generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // Changed to Int and auto-increment
  email     String?  @unique
  phone     String?  @unique
  name      String
  password  String
  role      Role     @default(USER)
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Brand Brand[]
}

model Brand {
  id        Int        @id @default(autoincrement()) // Changed to Int and auto-increment
  name      String
  user      User       @relation(fields: [userId], references: [id])
  userId    Int // Changed to Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  subBrands SubBrand[]
}

model SubBrand {
  id        Int      @id @default(autoincrement()) // Changed to Int and auto-increment
  name      String
  brand     Brand    @relation(fields: [brandId], references: [id])
  brandId   Int // Changed to Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
  BRAND
  MERCH
}
